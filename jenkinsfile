pipeline {
    agent any
    
    environment {
    	PATH="$PATH:$HOME/bin:/usr/lib/jvm/java-11-openjdk:/opt/maven:/opt/maven/bin
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/yovel554/hello-world.git'
            }
        }
        stage('Build') {
            steps {
		sh 'sudo chown root:root pom.xml'
                sh 'sudo mvn clean install'
            }
        }
    }
}
